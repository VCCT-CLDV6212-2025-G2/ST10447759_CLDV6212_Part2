@model AzureRetailHub.Models.FileDetailDto

@{
    ViewData["Title"] = "Delete Contract";
}

<h1>Delete Contract</h1>

<h3>Are you sure you want to delete this file?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            File Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            File Size
        </dt>
        <dd class="col-sm-10">
            @((Model.Size / 1024.0).ToString("F2")) KB
        </dd>
		<dt class="col-sm-2">
        </dt>
        <dd class="col-sm-10">
            @Model.UploadedOn?.ToString("yyyy-MM-dd HH:mm")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" name="fileName" value="@Model.Name" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>