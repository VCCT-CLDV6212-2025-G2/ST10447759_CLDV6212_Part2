<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>ABC Retail - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="site-header">
        <div class="container header-inner">
            <div class="brand">
                <a href="/" style="text-decoration:none; color:inherit;">
                    <span class="brand-icon">✺</span>
                    <span class="brand-name">ABC Retail</span>
                </a>
            </div>

            <nav class="main-nav">
                <a href="/Products">Products</a>
                <a href="/Customers">Customers</a>
                <a href="/Orders">Orders</a>
                <a href="/Contracts/">Contracts</a>
            </nav>
            <div class="header-right">
                <button class="bell" aria-label="Notifications">🔔</button>
                <img class="avatar" src="https://picsum.photos/seed/avatar/48/48" alt="user" />
            </div>
        </div>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="site-footer">
        <div class="container footer-inner">
            <div class="footer-col">Contact Us</div>
            <div class="footer-col">Support</div>
            <div class="footer-col">FAQ</div>
        </div>
        <div class="copyright">@DateTime.Now.Year © ABC Retail. All rights reserved.</div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
