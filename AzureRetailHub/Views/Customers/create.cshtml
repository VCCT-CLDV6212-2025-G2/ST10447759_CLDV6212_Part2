@model AzureRetailHub.Models.CustomerDto
@{
    ViewData["Title"] = "Create Customer";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h2 class="h4 mb-3">@ViewData["Title"]</h2>
                    <p class="text-muted mb-4">Add a new customer to Azure Retail Hub.</p>

                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        @* If your action has [ValidateAntiForgeryToken], this tag helper emits the token *@
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" placeholder="e.g. Sam Mthembu" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="e.g. sam@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Phone" class="form-label"></label>
                            <input asp-for="Phone" class="form-control" placeholder="e.g. +27 82 123 4567" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                Create
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Back to list
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-muted small mt-3">
                Tip: Ensure the email and phone are valid — client-side validation will highlight any issues.
            </div>
        </div>
    </div>
</div>
