@model AzureRetailHub.Models.ProductDto
@{
    ViewData["Title"] = "Create Product";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h2 class="h4 mb-3">@ViewData["Title"]</h2>
                    <p class="text-muted mb-4">Add a new product with price and image.</p>

                    <form asp-action="Create" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="e.g. Wireless Headphones" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Short description of the product"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">R</span>
                                <input asp-for="Price" class="form-control" inputmode="decimal" placeholder="0.00" />
                            </div>
                            <small class="text-muted">Price in South African rand.</small>
                            <span asp-validation-for="Price" class="text-danger d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label for="imageFile" class="form-label">Image</label>
                            <input id="imageFile" name="imageFile" type="file" class="form-control" accept="image/*" />
                            <div class="form-text">PNG, JPG or JPEG. Max a few MB.</div>

                            <div id="imgPreviewWrap" class="mt-3 d-none">
                                <img id="imgPreview" alt="Selected image preview" class="img-fluid rounded border" style="max-height: 220px; object-fit: cover;" />
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Create Product</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Back to list</a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-muted small mt-3">
                Tip: Choose the image first to confirm it looks right before submitting.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            const input = document.getElementById('imageFile');
            const wrap = document.getElementById('imgPreviewWrap');
            const img = document.getElementById('imgPreview');

            if (input) {
                input.addEventListener('change', function () {
                    const file = this.files && this.files[0];
                    if (!file) { wrap.classList.add('d-none'); img.src = ''; return; }
                    const reader = new FileReader();
                    reader.onload = e => {
                        img.src = e.target.result;
                        wrap.classList.remove('d-none');
                    };
                    reader.readAsDataURL(file);
                });
            }
        })();
    </script>
}
